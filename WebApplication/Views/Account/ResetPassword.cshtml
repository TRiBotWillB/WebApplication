@model ResetPasswordViewModel

@{
    ViewBag.Title = "Forgotten Password";
}


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <h2 class="mt-3 text-center">Reset Password</h2>

            <form method="post" class="mt-3 text-left custom-form">
                <div asp-validation-summary="All" class="text-danger"></div>
                
                <input asp-for="Email" class="form-control" hidden/>
                <input asp-for="Token" class="form-control" hidden/>

                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="form-control"/>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary" class="mt-3">Reset Password</button>
            </form>
        </div>
    </div>
</div>