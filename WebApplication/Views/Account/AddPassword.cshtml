@model AddPasswordViewModel

@{
    ViewBag.Title = "Add Password";
    Layout = "_Layout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <h2 class="mt-3 text-center">Add Password</h2>

            <hr/>

            <p>
                You have used an external account to login and do not have a local username/password.
                Please set a password now if you want to use a local account.
            </p>

            <form method="post" class="mt-3 text-left custom-form">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="NewPassword"></label>
                    <input asp-for="NewPassword" class="form-control"/>
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="form-control"/>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary" class="mt-3">Add Password</button>
            </form>
        </div>
    </div>
</div>