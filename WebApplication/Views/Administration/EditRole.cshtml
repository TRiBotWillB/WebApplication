@model EditRoleViewModel

@{
    ViewBag.Title = "View Roles";
}


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <h2 class="mt-3 text-center">Edit Role</h2>

            <form method="post" class="mt-3 text-left custom-form">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Id"></label>
                    <input asp-for="Id" class="form-control"/>
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="RoleName"></label>
                    <input asp-for="RoleName" class="form-control"/>
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>


                <button type="submit" class="btn btn-info mt-3">Update</button>
                <a asp-action="ListRoles" class="btn btn-danger mt-3">Cancel</a>
            </form>

            <div class="card">
                <div class="card-header">
                    Users in this role:
                </div>

                <div class="card-body">
                    @if (Model.Users.Any())
                    {
                        foreach (var user in Model.Users)
                        {
                            <h5 class="card-title">@user</h5>
                        }
                    }
                    else
                    {
                        <h5>No Users</h5>
                    }
                </div>

                <div>
                    <a class="btn btn-info" asp-action="CreateRole" asp-controller="Administration">Add User</a>
                    <a class="btn btn-warning" asp-action="CreateRole" asp-controller="Administration">Remove User</a>
                </div>
            </div>
        </div>
    </div>
</div>