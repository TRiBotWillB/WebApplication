@model int

@{
    ViewBag.Title = "Employee Not Found";
}
<div class="container">
    <div class="row">
        <div class="col col-6">
            <div class="alert alert-danger mt-3 mb-3">
                <h4 class="alert-heading">404 Not Found Error:</h4>
                
                <hr/>
                
                <h4>Employee with the Id = @Model cannot be found</h4>
            </div>
            
            <a asp-controller="Home" asp-action="Index">
                Click here to view Employees
            </a>
        </div>
    </div>
</div>