@model Employee
@inject IEmployeeRepository EmployeeRepository

@{
    ViewData["Title"] = "Create Employee";
}

<div class="container">
    <div class="row justify-content-center pt-5">
        <div class="col-6">
            <h3 class="text-center mb-3">Create Employee</h3>

            <form asp-controller="Home" asp-action="Create" method="post" class="create-form">

                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input class="form-control" asp-for="Name"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="Email"></label>
                    <input class="form-control" type="email" asp-for="Email"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="Department"></label>
                    <select class="form-select" asp-for="Department" asp-items="Html.GetEnumSelectList<Dept>()">
                        <option>Please Select</option>
                    </select>
                    <span asp-validation-for="Department" class="text-danger"></span>
                </div>

                <div class="mt-3 text-danger" asp-validation-summary="All">
                </div>

                <button class="btn btn-success mt-3" type="submit">Create</button>

                <div>
                    <small class="mt-3 text-muted">
                        Total Employees Count: @EmployeeRepository.GetAllEmployees().Count()
                    </small>
                </div>
            </form>
        </div>
    </div>
</div>