@model EmployeeCreateViewModel

@{
    ViewData["Title"] = "Create Employee";
}

<div class="container">
    <div class="row justify-content-center pt-5">
        <div class="col-6">
            <h3 class="text-center mb-3">Create Employee</h3>

            <form enctype="multipart/form-data" asp-controller="Home" asp-action="Create" method="post" class="create-form custom-form">

                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input class="form-control" asp-for="Name" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="Email"></label>
                    <input class="form-control" type="email" asp-for="Email" required/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="Department"></label>
                    <select class="form-select" asp-for="Department" asp-items="Html.GetEnumSelectList<Dept>()" required>
                        <option>Please Select</option>
                    </select>
                    <span asp-validation-for="Department" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="Photo"></label>
                    <input class="form-control" asp-for="Photo" multiple/>
                </div>

                <div class="mt-3 text-danger" asp-validation-summary="All">
                </div>

                <button class="btn btn-success mt-3" type="submit">Create</button>
            </form>
        </div>
    </div>
</div>