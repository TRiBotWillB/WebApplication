@model IEnumerable<WebApplication.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-5">
    <div class="row row-cols-1 row-cols-md-3 employee-list">
        @foreach (var employee in Model)
        {
            var photoPath = "/images/" + (employee.PhotoPath ?? "user.png");

            <div class="col mb-3">
                <div class="card">
                    <div class="card-body justify-content-center text-center">
                        <img class="card-img-top imageThumbnail" src="@photoPath" alt="User" asp-append-version="true"/>

                        <h3 class="mt-3">@employee.Name</h3>

                        <div class="mt-3">
                            <a asp-controller="Home" asp-action="details" asp-route-id="@employee.Id"
                               class="btn btn-info">
                                View
                            </a>

                            <a class="btn btn-warning" asp-controller="Home" asp-action="Edit" asp-route-id="@employee.Id">Edit</a>
                            <a class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>