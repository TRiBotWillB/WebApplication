@model HomeDetailsViewModel

@{
    ViewData["Title"] = "Employee Details";

    var photoPath = "/images/" + (Model.Employee.PhotoPath ?? "user.png");
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-4">
            <div class="card-deck">
                <div class="card m-3">
                    <div class="card-header">
                        <h3>@Model.Employee.Name</h3>
                    </div>

                    <div class="card-body">
                        <img class="card-img-top" src="@photoPath"/>

                        <ul>
                            <li>Name: @Model.Employee.Name</li>
                            <li>Email: @Model.Employee.Email</li>
                            <li>Department: @Model.Employee.Department</li>
                        </ul>
                    </div>

                    <div class="card-footer text-center">
                        <a class="btn btn-warning" asp-controller="Home" asp-action="Edit" asp-route-id="@Model.Employee.Id">Edit</a>
                        <a class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/js/script.js"></script>
}